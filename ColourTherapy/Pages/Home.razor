@page "/"
@using ColourTherapy
@using ColourTherapy.Services
@inject AppSettings Settings
@inject TranslationService TranslationService

<PageTitle>Chromatherapy - Color Healing for Your Emotions</PageTitle>

<div class="home-container">    <div class="card intro-card">
        <h2>@TranslationService.GetTranslation("homeWelcome")</h2>
        <p class="lead">@TranslationService.GetTranslation("homeLead")</p>
        
        <div class="color-strip">
            <div style="background-color: #F9D949;"></div>
            <div style="background-color: #F88379;"></div>
            <div style="background-color: #ACCBE1;"></div>
            <div style="background-color: #C8A2C8;"></div>
            <div style="background-color: #90EE90;"></div>
        </div>

        <div class="intro-text">
            <p>@TranslationService.GetTranslation("homeIntro1")</p>
            
            <p>@TranslationService.GetTranslation("homeIntro2")</p>

            <p>@TranslationService.GetTranslation("homeIntro3")</p>
        </div>

        <a href="@($"{Settings.BasePath}/mood-selector")" class="btn btn-primary mt-4">@TranslationService.GetTranslation("homeStartButton")</a>
    </div>
</div>

<style>
    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
    }

    .intro-card {
        max-width: 800px;
        text-align: center;
    }

    .intro-text {
        text-align: left;
        margin: 2rem 0;
    }

    .lead {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .color-strip {
        display: flex;
        justify-content: center;
        height: 10px;
        margin: 2rem 0;
        border-radius: 5px;
        overflow: hidden;
    }

    .color-strip div {
        flex: 1;
        height: 100%;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        await TranslationService.InitializeAsync();
    }
}
